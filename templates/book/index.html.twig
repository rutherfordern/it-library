{% extends 'layouts/app.html.twig' %}

{% block title %} Books {% endblock %}

{% block content %}
    <div class="d-flex align-items-center p-3 my-3 text-white bg-secondary rounded shadow-sm">
        <div class="lh-1">
            <h1 class="h2 mb-0 text-white lh-1">Книги</h1>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for book in books %}
            <div class="col">
                <div class="card h-100">
                    <img src="{{ vich_uploader_asset(book, 'imageFile') }}" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><a href="{{ path('book_show', { 'id': book.id }) }}" class="text-decoration-none">{{ book.title }}</a></h5>
                        {% for author in book.authors %}
                            <p class="card-subtitle mb-2 text-body-secondary">{{ author.firstName }} {{ author.lastName }}</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

